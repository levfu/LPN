<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="623.0" prefWidth="806.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CommunityChatController">

    <ScrollPane fitToWidth="true" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
        <VBox fx:id="messageBox" alignment="TOP_CENTER" spacing="5.0">
        </VBox>
    </ScrollPane>

    <HBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
        <TextField fx:id="inputField" prefHeight="26.0" prefWidth="674.0" promptText="Nhập tin nhắn...">
         <font>
            <Font size="14.0" />
         </font></TextField>
        <Button fx:id="sendButton" onAction="#sendMessage" prefWidth="100.0" text="Gửi" />
    </HBox>

</AnchorPane>
